<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.New_User">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="375.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="cnic" layoutX="327.0" layoutY="125.0" prefHeight="25.0" prefWidth="157.0" promptText="45XXXXXXXXXXX" />
            <Label layoutX="180.0" layoutY="75.0" text="Name">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="179.0" layoutY="124.0" text="CNIC">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button fx:id="login_screen" layoutX="547.0" layoutY="330.0" mnemonicParsing="false" onAction="#back_to_login" prefHeight="25.0" prefWidth="79.0" text="Back">
               <font>
                  <Font name="Calisto MT Bold" size="17.0" />
               </font>
            </Button>
            <Button fx:id="new_user" layoutX="243.0" layoutY="329.0" mnemonicParsing="false" onAction="#register_method" prefHeight="48.0" prefWidth="131.0" text=" Register">
               <font>
                  <Font name="Calisto MT Bold" size="17.0" />
               </font>
            </Button>
            <TextField fx:id="name" layoutX="326.0" layoutY="76.0" prefHeight="25.0" prefWidth="157.0" promptText="Name" />
            <Label layoutX="218.0" layoutY="20.0" text="Registration Form">
               <font>
                  <Font name="Wingdings 2" size="22.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" layoutX="326.0" layoutY="178.0" prefHeight="26.0" prefWidth="157.0" promptText="* * * * * *" />
            <Label layoutX="179.0" layoutY="181.0" text="Password">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="156.0" layoutY="238.0" text=" PLease Make sure your password length is more than 4" textFill="#e33d3d" />
         </children>
    </AnchorPane>
  </children>
</VBox>
